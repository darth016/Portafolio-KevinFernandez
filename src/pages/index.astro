---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import SocialPill from '../components/SocialPill.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import MailIcon from '../components/icons/Mail.astro';
import CodeIcon from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro';
---

<Layout title="Porfolio de Kevin Fernandez - Desarrollador y Programador Web." description="Sumérgete en mi portafolio, donde destaco proyectos significativos que he desarrollado. Desde aplicaciones web interactivas hasta soluciones backend robustas, cada proyecto es una representación de mi compromiso con la excelencia técnica.">
	<main class="px-4">
		<SectionContainer class="py-44 pb-24">
			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex justify-center flex-row gap-x-4 pb-6 lg:pb-10">Hey, soy Kevin<a href="https://www.linkedin.com/in/kevin-fernandez-26570a214/" target="_blank" rel="noopener" class="flex justify-center items-center"><Badge>Disponible para trabajar</Badge></a></h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]"><span class="text-yellow-200/90">Desarrollador Web</span>.<span class="text-blue-200/90"> De Argentina</span>. <span class="opacity-75">Especializado en crear webs personalizadas.</span></h2>
			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill>
					<LinkedInIcon class="size-4 md:size-6" href="https://www.linkedin.com/in/kevin-fernandez" />
					Linkedin
				</SocialPill>
				<SocialPill>
					<GitHubIcon class="size-4 md:size-6" href="https://https://github.com/darth016" />
					GitHub
				</SocialPill>
				<SocialPill>
					<MailIcon class="size-4 md:size-6" href="https://https://github.com/darth016" />
					kevinfernandez0193@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>
		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>

